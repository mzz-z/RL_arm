<mujoco model="4dof_arm">
  <!--
    4-DOF arm with base rotation.
    - Base rotates around z-axis (turret)
    - Shoulder and elbow rotate around y-axis (vertical plane)
    - Wrist pitch rotates around y-axis
    - Arm can reach in any direction around the base
    - Ball has freejoint for physics-based movement
    - Weld constraint for grasp attachment
    - Gripper visualization at end-effector
    - Platform pedestals for reach targets and pick-and-place

    JOINT LIMITS: Carefully tuned to prevent arm going under table (z=0.42)
  -->

  <compiler angle="radian" coordinate="local"/>

  <option timestep="0.002" gravity="0 0 -9.81" integrator="implicit">
    <flag warmstart="enable"/>
  </option>

  <visual>
    <global offwidth="1280" offheight="720"/>
    <headlight diffuse="0.4 0.4 0.5" ambient="0.15 0.15 0.2" specular="0.3 0.3 0.3"/>
    <quality shadowsize="4096"/>
    <map fogstart="3" fogend="10"/>
    <rgba fog="0.04 0.04 0.08 1"/>
  </visual>

  <default>
    <joint armature="0.01" damping="0.5" limited="true"/>
    <geom contype="1" conaffinity="1" friction="0.5 0.1 0.1"/>
    <position kp="40" ctrlrange="-2.5 2.5"/>
  </default>

  <asset>
    <texture name="grid" type="2d" builtin="checker" width="512" height="512"
             rgb1="0.08 0.08 0.10" rgb2="0.12 0.12 0.14"/>
    <material name="grid_mat" texture="grid" texrepeat="5 5" reflectance="0.1"/>

    <!-- Robot materials â€” Gunmetal & Ice industrial palette -->
    <material name="metal_dark" rgba="0.14 0.15 0.19 1" specular="0.85" shininess="0.95"/>
    <material name="metal_blue" rgba="0.26 0.28 0.34 1" specular="0.7" shininess="0.8"/>
    <material name="metal_light" rgba="0.40 0.42 0.48 1" specular="0.75" shininess="0.85"/>
    <material name="joint_orange" rgba="0.28 0.35 0.46 1" specular="0.9" shininess="0.95"/>
    <material name="gripper_mat" rgba="0.19 0.20 0.25 1" specular="0.6" shininess="0.7"/>
    <material name="table_mat" rgba="0.28 0.28 0.32 1" specular="0.3" shininess="0.4"/>
    <material name="finger_tip" rgba="0.55 0.58 0.64 1" specular="0.95" shininess="1.0"/>
    <material name="ball_mat" rgba="0.95 0.2 0.15 1" specular="0.4" shininess="0.5"/>
  </asset>

  <worldbody>
    <!-- Scene lighting -->
    <light pos="0.8 -0.8 2.0" dir="-0.3 0.3 -0.8"
           diffuse="0.9 0.85 0.8" specular="0.4 0.4 0.4" castshadow="true"/>
    <light pos="-1.0 0.5 1.5" dir="0.5 -0.2 -0.7"
           diffuse="0.25 0.25 0.35" specular="0.05 0.05 0.05"/>
    <light pos="0.0 1.0 1.0" dir="0.0 -0.7 -0.3"
           diffuse="0.15 0.15 0.25" specular="0.15 0.15 0.15"/>

    <!-- Ground plane -->
    <geom name="ground" type="plane" size="2 2 0.1" material="grid_mat" conaffinity="1" contype="1"/>

    <!-- Table (centered on arm base) -->
    <body name="table" pos="0 0 0.4">
      <geom name="table_top" type="box" size="0.6 0.6 0.02" material="table_mat"
            conaffinity="1" contype="1" mass="10"/>
      <!-- Table legs -->
      <geom name="leg1" type="cylinder" pos="-0.55 -0.55 -0.2" size="0.025 0.18" material="metal_dark" contype="0" conaffinity="0"/>
      <geom name="leg2" type="cylinder" pos="0.55 -0.55 -0.2" size="0.025 0.18" material="metal_dark" contype="0" conaffinity="0"/>
      <geom name="leg3" type="cylinder" pos="-0.55 0.55 -0.2" size="0.025 0.18" material="metal_dark" contype="0" conaffinity="0"/>
      <geom name="leg4" type="cylinder" pos="0.55 0.55 -0.2" size="0.025 0.18" material="metal_dark" contype="0" conaffinity="0"/>
    </body>

    <!-- Platform pedestals (repositioned per episode at runtime) -->
    <geom name="platform_geom" type="box" size="0.03 0.03 0.05"
          pos="0.3 0 0.47" material="metal_dark"
          contype="1" conaffinity="1" mass="5"/>
    <geom name="dest_platform" type="box" size="0.03 0.03 0.05"
          pos="-0.3 0 0.47" material="metal_blue"
          contype="0" conaffinity="0" mass="5"/>

    <!-- Arm base (fixed to world at table height) -->
    <body name="arm_base" pos="0 0 0.42">
      <!-- Base mounting plate (fixed, cosmetic - overlaps table surface so non-colliding) -->
      <geom name="base_plate" type="cylinder" size="0.06 0.015" pos="0 0 0" material="metal_dark" mass="0.5" contype="0" conaffinity="0"/>

      <!-- Turret body (rotates around z-axis) -->
      <body name="arm_turret" pos="0 0 0">
        <joint name="base" type="hinge" axis="0 0 1" range="-3.14159 3.14159"
               damping="0.5" armature="0.02"/>

        <!-- Base column (rotates with turret, cosmetic - overlaps table so non-colliding) -->
        <geom name="base_column" type="cylinder" size="0.04 0.03" material="metal_dark" mass="0.5" contype="0" conaffinity="0"/>
        <!-- Shoulder housing (cosmetic) -->
        <geom name="shoulder_housing" type="cylinder" size="0.035 0.025" euler="1.5708 0 0"
              material="joint_orange" mass="0.2" contype="0" conaffinity="0"/>

        <!-- Link 1 (upper arm) -->
        <body name="link1" pos="0 0 0">
          <!-- Shoulder joint: rotates in x-z plane around y-axis -->
          <!-- Range [0, 1.5]: positive = upward, prevents arm going under table -->
          <joint name="shoulder" type="hinge" axis="0 -1 0" range="0 1.5"
                 damping="0.5" armature="0.02"/>

          <!-- Link 1 structure - robotic arm segment (shortened for 4-DOF) -->
          <geom name="link1_base" type="cylinder" size="0.028 0.015" material="metal_blue" mass="0.1" contype="1" conaffinity="1"/>
          <geom name="link1_main" type="capsule" fromto="0.015 0 0 0.205 0 0" size="0.022"
                material="metal_blue" mass="0.4" contype="1" conaffinity="1"/>
          <geom name="link1_end" type="cylinder" size="0.028 0.015" pos="0.22 0 0"
                material="metal_blue" mass="0.1" contype="1" conaffinity="1"/>

          <!-- Elbow joint housing -->
          <geom name="elbow_housing" type="cylinder" size="0.03 0.022" pos="0.22 0 0"
                euler="1.5708 0 0" material="joint_orange" mass="0.15" contype="0" conaffinity="0"/>

          <!-- Link 2 (forearm) at end of link 1 -->
          <body name="link2" pos="0.22 0 0">
            <!-- Elbow joint: rotates in x-z plane around y-axis -->
            <!-- Range [-1.8, 0.3]: mostly folding back, slight forward bend -->
            <joint name="elbow" type="hinge" axis="0 1 0" range="-1.8 0.3"
                   damping="0.3" armature="0.01"/>

            <!-- Link 2 structure -->
            <geom name="link2_base" type="cylinder" size="0.024 0.012" material="metal_light" mass="0.08" contype="1" conaffinity="1"/>
            <geom name="link2_main" type="capsule" fromto="0.012 0 0 0.155 0 0" size="0.018"
                  material="metal_light" mass="0.25" contype="1" conaffinity="1"/>

            <!-- Link 3 (wrist segment) at end of link 2 -->
            <body name="link3" pos="0.18 0 0">
              <!-- Wrist joint: pitch around y-axis -->
              <joint name="wrist" type="hinge" axis="0 1 0" range="-1.5 1.5"
                     damping="0.2" armature="0.005"/>

              <!-- Wrist housing (cosmetic) -->
              <geom name="wrist_housing" type="cylinder" size="0.022 0.018" euler="1.5708 0 0"
                    material="joint_orange" mass="0.1" contype="0" conaffinity="0"/>

              <!-- Link 3 structure -->
              <geom name="link3_main" type="capsule" fromto="0.008 0 0 0.075 0 0" size="0.014"
                    material="metal_light" mass="0.15" contype="1" conaffinity="1"/>

              <!-- Wrist/gripper mount -->
              <geom name="wrist_mount" type="cylinder" size="0.022 0.015" pos="0.085 0 0"
                    material="gripper_mat" mass="0.05" contype="1" conaffinity="1"/>

              <!-- Gripper body -->
              <body name="gripper" pos="0.10 0 0">
                <!-- Gripper palm -->
                <geom name="gripper_palm" type="box" size="0.015 0.025 0.012" material="gripper_mat" mass="0.03" contype="1" conaffinity="1"/>

                <!-- Left finger (fixed, visual only) -->
                <geom name="finger_left_base" type="box" pos="0.012 0.018 0" size="0.012 0.007 0.008"
                      material="gripper_mat" mass="0.01" contype="1" conaffinity="1"/>
                <geom name="finger_left_tip" type="box" pos="0.028 0.015 0" size="0.008 0.004 0.006"
                      euler="0 0 -0.3" material="finger_tip" mass="0.005" contype="1" conaffinity="1"/>

                <!-- Right finger (fixed, visual only) -->
                <geom name="finger_right_base" type="box" pos="0.012 -0.018 0" size="0.012 0.007 0.008"
                      material="gripper_mat" mass="0.01" contype="1" conaffinity="1"/>
                <geom name="finger_right_tip" type="box" pos="0.028 -0.015 0" size="0.008 0.004 0.006"
                      euler="0 0 0.3" material="finger_tip" mass="0.005" contype="1" conaffinity="1"/>
              </body>

              <!-- End-effector site at gripper center (between fingers) -->
              <site name="ee_site" pos="0.13 0 0" size="0.008" rgba="0.4 0.85 1.0 0.3"/>
            </body>
          </body>
        </body>
      </body>
    </body>

    <!-- Ball with freejoint (can move freely in 3D space) -->
    <body name="ball" pos="0.25 0 0.45">
      <freejoint name="ball_joint"/>
      <geom name="ball_geom" type="sphere" size="0.03" material="ball_mat"
            mass="0.05" friction="0.8 0.1 0.1" conaffinity="1" contype="1"/>
    </body>
  </worldbody>

  <!-- Position actuators for stable control -->
  <actuator>
    <position name="base_act" joint="base" kp="40" ctrlrange="-3.14159 3.14159"/>
    <position name="shoulder_act" joint="shoulder" kp="50" ctrlrange="0 1.5"/>
    <position name="elbow_act" joint="elbow" kp="40" ctrlrange="-1.8 0.3"/>
    <position name="wrist_act" joint="wrist" kp="30" ctrlrange="-1.5 1.5"/>
  </actuator>

  <!-- Weld constraint for grasp (initially inactive) -->
  <equality>
    <weld name="grasp_weld" body1="ball" body2="link3" relpose="0.13 0 0 1 0 0 0" active="false"/>
  </equality>

  <!-- Sensors for observation -->
  <sensor>
    <jointpos name="base_pos" joint="base"/>
    <jointpos name="shoulder_pos" joint="shoulder"/>
    <jointpos name="elbow_pos" joint="elbow"/>
    <jointpos name="wrist_pos" joint="wrist"/>
    <jointvel name="base_vel" joint="base"/>
    <jointvel name="shoulder_vel" joint="shoulder"/>
    <jointvel name="elbow_vel" joint="elbow"/>
    <jointvel name="wrist_vel" joint="wrist"/>
    <framepos name="ee_pos" objtype="site" objname="ee_site"/>
    <framepos name="ball_pos" objtype="body" objname="ball"/>
  </sensor>

</mujoco>
